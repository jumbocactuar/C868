<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C868.AddUserPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <Label Style ="{StaticResource headerStyle}" />

        <StackLayout Padding="20, 0, 20, 0">
            <Label Style="{StaticResource pageLabelStyle}"
                   Padding="0, 10, 0, 0"
                   Text="ADD USER" />

            <Label Style="{StaticResource fieldLabelStyle}"
                   Text="USER NAME" />

            <Entry x:Name="addUserUserNameEntry" />

            <Label Style="{StaticResource fieldLabelStyle}"
                   Text="PASSWORD" />

            <Entry x:Name="addUserPasswordEntry"
                   IsPassword="True" />

            <Button x:Name="addUserSaveButton"
                    Style="{StaticResource addButtonStyle}"
                    Text="SAVE"
                    Margin="0, 15, 0, 0"
                    Clicked="AddUserSaveButton_Clicked"/>

            <Button Style="{StaticResource cancelButtonStyle}"
                    Margin="0, 7, 0, 0"
                    Clicked="CancelButton_Clicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>